{
    "name": "oroshi/oroshi-core",
    "type": "library",
    "description": "Provisioning and configuration of a Daikon CQRS (app) container.",
    "homepage": "https://github.com/oroshi/oroshi-core",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4",
        "aura/router": "^3.0",
        "beberlei/assert": "^v3.0",
        "daikon/config": "master@dev",
        "daikon/couchdb-adapter": "master@dev",
        "daikon/elasticsearch7-adapter": "master@dev",
        "daikon/entity": "master@dev",
        "daikon/event-sourcing": "master@dev",
        "daikon/flysystem-adapter": "master@dev",
        "daikon/metadata": "master@dev",
        "daikon/rabbitmq3-adapter": "master@dev",
        "daikon/value-object": "master@dev",
        "danielstjules/stringy": "^3.1",
        "fig/http-message-util": "^1.1",
        "franzl/whoops-middleware": "^1.2",
        "middlewares/cors": "^v2.0",
        "middlewares/negotiation": "^v2.0",
        "middlewares/request-handler": "^v2.0",
        "monolog/monolog": "^2.0",
        "psr/container": "^1.0",
        "psr/log": "^1.0",
        "rdlowrey/auryn": "^v1.4",
        "relay/relay": "^v2.0",
        "symfony/console": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/var-dumper": "^4.1",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": { "Oroshi\\Core\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Oroshi\\Core\\Tests\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src tests",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src tests",
        "copy-paste-detector": "phpcpd src tests || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}
